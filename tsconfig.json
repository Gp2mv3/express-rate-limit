// /tsconfig.json
// Typescript compiler configuration

{
	"compilerOptions": {
		// Compilation options
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",

		// Type checking options
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		// Module resolution options
		"moduleResolution": "node",
		"esModuleInterop": true,

		// Source map options
		"inlineSources": true
	},
	"include": ["source/**/*.ts"],
	"exclude": ["node_modules"]
}
